<div class="mt-4">
    <h1>Khóa học của tôi</h1>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên khóa học</th>
                <th scope="col" colspan="2">Thời gian tạo</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/courses/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
                    <button class="btn btn-primary" data-toggle="modal" data-id="{{this._id}}"
                        data-target="#deleteConfirm">Xóa</button>

                </td>

            </tr>
            {{/each}}

        </tbody>
    </table>
</div>


<!-- Button trigger modal -->
{{!-- Confirm Delete --}}

<div class="modal" id="deleteConfirm" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học ?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa khóa học này</p>
            </div>
            <div class="modal-footer">
                <button id="btn-delete" type="button" class="btn btn-danger">Xóa bỏ</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<script>
    var courseId;
    document.addEventListener('DOMContentLoaded', function () {
        $('#deleteConfirm').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            courseId = button.data('id')
        })

        var btnDelete = document.getElementById("btn-delete");
        btnDelete.onclick = function () {
            <form method="POST" action="/courses/{{courses._id}}?_method=PUT"><form>

        }
    })
</script>